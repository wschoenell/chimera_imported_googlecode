<?xml version="1.0"?>

<driver>

  <name>Fake</name>
  <type>Camera</type>

  <cmdline>
camfits.fake -t $exp_time -n $n_exp -o $output
  </cmdline>

  <parameters>

     <parameter>
        <name>exp_time</name>
        <type>float</type>
        <default>1.0</default>
        <doc>Integration time in seconds. Min and max comes from CCDcap.</doc>
     </parameter>

     <parameter>
        <name>n_exp</name>
        <type>int</type>
        <default>1</default>
        <doc>Number of frames to take.</doc>
     </parameter>

     <parameter>
        <name>output</name>
        <type>str</type>
        <default>img-$time-$object-$filter</default>
        <doc>Filename of the output image (wildcards allowed: $time, $object, $filter).</doc>
     </parameter>

     <parameter>
        <name>verbose</name>
        <type>bool</type>
        <default>True</default>
        <doc>Verbose mode.</doc>
     </parameter>

  </parameters>

</driver>
