<?xml version="1.0"?>

<driver>

  <name>WX200</name>
  <type>Weather</type>

  <cmdline>
wx200 --nounits --celsius --temp $device
  </cmdline>

  <parameters>
     <parameter>
        <name>device</name>
        <type>str</type>
        <default>/dev/ttyS0</default>
        <doc>Device to connect.</doc>
     </parameter>

     <parameter>
        <name>verbose</name>
        <type>bool</type>
        <default>True</default>
        <doc>Verbose mode.</doc>
     </parameter>

  </parameters>

</driver>
