<?xml version="1.0"?>

<driver>

  <name>SBIG_ST4</name>
  <type>Camera</type>

  <cmdline>
camfits.st4 -d $device -s $shutter -c $ccd -t $exp_time -n $n_exp -o $output
  </cmdline>

  <parameters>
     <parameter>
        <name>device</name>
        <type>int</type>
        <default>0</default>
        <doc>Device to connect. 0 = USB, 1 = LPT1, 2 = LPT2, ...</doc>
     </parameter>

     <parameter>
        <name>ccd</name>
        <type>int</type>
        <default>0</default>
        <doc>CCD chip to use. 0 = Imaging, 1 = Tracking.</doc>
     </parameter>

     <parameter>
        <name>exp_time</name>
        <type>float</type>
        <default>1.0</default>
        <doc>Integration time in seconds. Min and max comes from CCDcap.</doc>
     </parameter>

     <parameter>
        <name>n_exp</name>
        <type>int</type>
        <default>1</default>
        <doc>Number of frames to take.</doc>
     </parameter>

     <parameter>
        <name>shutter</name>
        <type>bool</type>
        <default>True</default>
        <doc>Open the shutter?.</doc>
     </parameter>

     <parameter>
        <name>output</name>
        <type>str</type>
        <default>img-$time-$object-$filter</default>
        <doc>Filename of the output image (wildcards allowed: $time, $object, $filter).</doc>
     </parameter>

     <parameter>
        <name>verbose</name>
        <type>bool</type>
        <default>True</default>
        <doc>Verbose mode.</doc>
     </parameter>

  </parameters>

</driver>
