<?xml version="1.0"?>

<driver>

  <name>Fake</name>
  <type>Telescope</type>

  <cmdline>
  telgo.fake -d $device -P $paranoia $ra,$dec
  </cmdline>

  <parameters>
     <parameter>
        <name>device</name>
        <type>str</type>
        <default>/dev/ttyS0</default>
        <doc>Device to connect.</doc>
     </parameter>

     <parameter>
        <name>paranoia</name>
        <type>int</type>
        <default>1</default>
        <doc>Iteration on Paranoia's mode. see man telgo.lx200 for more on Paranoia mode.</doc>
     </parameter>

     <parameter>
        <name>ra</name>
        <type>str</type>
        <default>00:00:00</default>
        <doc>RA to slew. Hours mode.</doc>
     </parameter>

     <parameter>
        <name>dec</name>
        <type>str</type>
        <default>00:00:00</default>
        <doc>DEC to slew. Sexagesimal mode.</doc>
     </parameter>

     <parameter>
        <name>verbose</name>
        <type>bool</type>
        <default>True</default>
        <doc>Verbose mode.</doc>
     </parameter>

  </parameters>

</driver>
