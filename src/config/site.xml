<?xml version="1.0"?>

<uts>

<site name="UFSC" latitude="-22.0" longitude="-40.0" altitude="1000"/>

<drivers>

   <driver name="meade" class="Meade">
      <option name="device" value="/dev/ttyS0"/>
   </driver>

   <driver name="sbig" class="SBIG">
	<option name="device"		value="/dev/ttyS0"/>
	<option name="ccd"		value="imaging">
	<option name="exptime"		value=0>
	<option name="shutter"		value="open">
	<option name="start_time"	value="">
	<option name="readoutAborted"	value="1"
	<option name="readout_mode"	value="1">
	<option name="dateformat"	value="%d%m%y">
	<option name="fileformat"	value="$num-$observer-$date-%objname">
	<option name="directory"	value="">
	<option name="save_on_temp"	value="">
	<option name="seq_num"		value="">
	<option name="observer"		value="">
	<option name="objname"		value="">
   </driver>


</drivers>

<instruments>

   <instrument name="lx200gps" class="Telescope">
      <option name="driver" value="/Meade/meade" />
      <option name="limits" value="some magic number"/>
      <option name="pointintModel" value="more magic"/>
   </instrument>

</instruments>

<controllers>

   <controller name="sample" class="Sample">
       <option name="max-queue" value="100"/>
   </controller>	

</controllers>

</uts>
