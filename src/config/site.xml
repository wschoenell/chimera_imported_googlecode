<?xml version="1.0"?>

<uts>

<site name="UFSC" latitude="-22.0" longitude="-40.0" altitude="1000"/>

<drivers>

   <driver name="sbig" class="SBIG" host='200.100.50.25' port='1000'>
	<option name="device"		value="usb"/>
	<option name="ccd"		value="imaging"/>
	<option name="exp_time"		value="10"/>
	<option name="shutter"		value="open"/>
	<option name="readout_aborted"	value="1"/>
	<option name="readout_mode"	value="1"/>
	<option name="date_format"	value="%d%m%y"/>
	<option name="file_format"	value="$num-$observer-$date-$objname"/>
	<option name="file_extension"	value="fits"/>
	<option name="directory"	value="/home/someuser/images"/>
	<option name="save_on_temp"	value="1"/>
	<option name="seq_num"		value="1"/>
	<option name="observer"		value="Observer"/>
	<option name="obj_name"		value="obj"/>
	<option name="start_time"	value="0"/>
	<option name="start_time"	value="0"/>
	<option name="temp_regulation"	value="0"/>
	<option name="temp_setpoint"	value="20.0"/>
	<option name="temp_delta"	value="1.0"/>
	<option name="auto_freeze"	value="0"/>
   </driver>

</drivers>

<instruments>

   <instrument name="st8" class="Camera">
      <option name="driver" value="host:1000/SBIG/sbig"/>
   </instrument>

</instruments>

</uts>
